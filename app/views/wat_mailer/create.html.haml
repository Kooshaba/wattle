%h1 A new wat has been detected on #{@wat.app_env}

%table
  %tbody
    %tr
      %th
      %td= link_to "View wat",wat_url(@wat)
    %tr
      %th Groupings
      %td
        - @wat.groupings.each do |grouping|
          = link_to grouping_url(grouping), grouping_url(grouping)

    %tr
      %th Application
      %td= "#{@wat.app_name} (#{@wat.app_env})"
    - if @wat.page_url.present?
      %tr
        %th Page URL
        %td= link_to @wat.page_url, @wat.page_url

    %tr
      %th Occurred at
      %td= @wat.created_at

    %tr
      %th Key Line
      %td= @wat.key_line

  - if @wat.message.present?
    %tr
      %th Message
      %td= @wat.message
  - if @wat.error_class.present?
    %tr
      %th Error Class
      %td= @wat.error_class