!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Wattle"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "wats", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="/wattle_logo.png" rel="apple-touch-icon")
    %link(href="/favicon.ico" rel="shortcut icon")
    = javascript_wat_catcher

  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#")
            .label.label-warning.logo-label ?!
            Wattle
          .container.nav-collapse
            %ul.nav
              %li= link_to "Reports", groupings_path
            %ul.nav
              %li= link_to "Wats", wats_path

            .pull-right.hidden-phone
              %ul.nav
                %li
                  = image_tag gravatar_url(current_user), class: "watcher-avatar"
                %li
                  %a{href: "#settings"}
                    = current_user.display_name

    .container-fluid

      .row-fluid
        .span2
          =render 'layouts/filters'

        .span7
          = yield

        .span3
          %ul.nav.nav-stacked.nav-tabs
            - if content_for?(:sidebar)
              = content_for :sidebar
            - else
              %li.nav-header
                Top Wats
              - top_wats.each do |group|
                %li
                  = link_to group do
                    .badge=group.wats.count
                    = wat_heading(representative_wat(group))

      %footer
        %p &copy; Company 2013
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
